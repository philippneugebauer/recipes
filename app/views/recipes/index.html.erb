<h1>Recipes
  <%= link_to "Upload new recipes", new_recipe_import_path, class: "btn btn-outline-primary" %>
</h1>

<div class="table-responsive">
  <table class="table table-hover" aria-label="table for Recipes">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Ingredients</th>
        <th scope="col">Cook time</th>
        <th scope="col">Prep time</th>
        <th scope="col">Ratings</th>
        <th scope="col">Author</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td>
            <%= link_to recipe.title, recipe %>
            <%#= image_tag recipe.image_url, class: "img-thumbnail", alt: "Cooked #{recipe.title}" if recipe.image_url %>
          </td>
          <td>
            <ul>
              <% recipe.ingredients.each do |ingredient| %>
                <li><%= ingredient %></li>
              <% end %>
            </ul>
          </td>
          <td><%= recipe.cook_time %></td>
          <td><%= recipe.prep_time %></td>
          <td><%= recipe.ratings %></td>
          <td><%= recipe.author %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
